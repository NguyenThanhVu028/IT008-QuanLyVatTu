                                           FontFamily="/Material/Fonts/Lexend/#Lexend Medium"
                                           FontWeight="Medium"/>
                            </StackPanel>-->
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Mouse.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Duration="0:0:0.25" Storyboard.TargetName="DisplayBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" From="#B2001E28" To="#B200455C"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Mouse.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Duration="0:0:0.25" Storyboard.TargetName="DisplayBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" From="#B200455C" To="#B2001E28"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
