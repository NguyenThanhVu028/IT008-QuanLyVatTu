                                <Storyboard>
                                    <ColorAnimation Duration="0:0:0.25" Storyboard.TargetName="DisplayBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" From="#B200455C" To="#B2001E28"/>
                                </Storyboard>
