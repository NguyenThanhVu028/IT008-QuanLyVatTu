<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CustomControl="clr-namespace:PMQuanLyVatTu.CustomControls">

    <Style TargetType="CustomControl:CustomButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CustomControl:CustomButton">
                    <Grid>
                        <Border x:Name="BtnBorder" 
                                Background="{TemplateBinding BorderBackground}"
                                BorderBrush="{TemplateBinding BorderColor}"
                                BorderThickness="{TemplateBinding BorderThick}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                CornerRadius="{TemplateBinding RadiusOfCorner}"/>
                        <TextBlock x:Name="BtnTextBlock" Text="{TemplateBinding DisplayText}"
                                   Foreground="{TemplateBinding BorderColor}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="/Material/Fonts/Lexend/#Lexend Regular"
                                   FontSize="{TemplateBinding TextSize}"
                                   FontWeight="Bold"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{Binding BorderColorHighlight, RelativeSource={RelativeSource TemplatedParent}}" TargetName="BtnBorder"/>
                            <Setter Property="Foreground" Value="{Binding BorderColorHighlight, RelativeSource={RelativeSource TemplatedParent}}" TargetName="BtnTextBlock"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{Binding BorderBackgroundClicked, RelativeSource={RelativeSource TemplatedParent}}" TargetName="BtnBorder"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="CustomControl:ImageButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CustomControl:ImageButton">
                    <Grid x:Name="ImageBtnGrid">
                        <Image Source="{Binding ImageLocation, RelativeSource={RelativeSource TemplatedParent}}"
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{Binding BorderBackgroundHightlight, RelativeSource={RelativeSource TemplatedParent}}" TargetName="ImageBtnGrid"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="CustomControl:CustomTextbox">
        <Setter Property="FontFamily" Value="/Material/Fonts/Lexend/#Lexend Regular"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="{Binding TextSize, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CustomControl:CustomTextbox">
                    <Grid>
                        <Border x:Name="BoxBorder" 
                                Background="{TemplateBinding BackgroundColor}"
                                CornerRadius="{TemplateBinding RadiusOfCorner}"
                                BorderBrush="{TemplateBinding BorderColor}"
                                BorderThickness="{TemplateBinding BorderThick}"/>
                        <ScrollViewer x:Name="PART_ContentHost"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center"
                                      VerticalScrollBarVisibility="Hidden"
                                      Margin="10"/>
                        <TextBlock x:Name="WaterMark" 
                                   Text="{TemplateBinding WaterMark}"
                                   FontFamily="/Material/Fonts/Lexend/#Lexend Regular"
                                   FontSize="{TemplateBinding TextSize}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="10"
                                   Visibility="Collapsed"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Visibility" Value="Visible" TargetName="WaterMark"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Background" Value="{Binding BackgroundColorClicked, RelativeSource={RelativeSource TemplatedParent}}" TargetName="BoxBorder"/>
                            <Setter Property="BorderBrush" Value="{Binding BorderColorClicked, RelativeSource={RelativeSource TemplatedParent}}" TargetName="BoxBorder"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
